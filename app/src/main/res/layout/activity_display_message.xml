<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayMessageActivity">

    <ImageView
        android:id="@+id/templateImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:srcCompat="@drawable/template" />

    <TextView
        android:id="@+id/textNum"
        android:layout_width="0dp"
        android:layout_height="19dp"
        android:layout_marginStart="229dp"
        android:layout_marginLeft="229dp"
        android:layout_marginTop="173dp"
        android:text="000000000000"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imagePicture"
        app:layout_constraintStart_toStartOf="@+id/templateImage"
        app:layout_constraintTop_toTopOf="@+id/templateImage" />

    <TextView
        android:id="@+id/textName"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="某某某"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/textNum"
        app:layout_constraintTop_toBottomOf="@+id/textNum" />

    <TextView
        android:id="@+id/textCollege"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="某某某某某某某学院"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/textName"
        app:layout_constraintTop_toBottomOf="@+id/textName" />

    <TextView
        android:id="@+id/textGrade"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="0000"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/textCollege"
        app:layout_constraintTop_toBottomOf="@+id/textCollege" />

    <TextView
        android:id="@+id/textOrientation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="310dp"
        android:text="批准出校"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="432dp"
        android:text="0000/0/00 上午00:00:00"
        android:textColor="#00CC65"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagePicture" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="学号："
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/textNum"
        app:layout_constraintEnd_toStartOf="@+id/textNum" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="姓名："
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/textName"
        app:layout_constraintEnd_toStartOf="@+id/textName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="学院："
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/textCollege"
        app:layout_constraintEnd_toStartOf="@+id/textCollege" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="年级："
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/textGrade"
        app:layout_constraintEnd_toStartOf="@+id/textGrade" />

    <ImageView
        android:id="@+id/imagePicture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="143dp"
        android:layout_marginEnd="88dp"
        android:layout_marginRight="88dp"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toTopOf="@+id/textTime"
        app:layout_constraintEnd_toStartOf="@+id/textNum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>